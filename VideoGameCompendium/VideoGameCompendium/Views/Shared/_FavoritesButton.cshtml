@using VideoGameCompendium.Models;
@using VideoGameCompendium.Controllers;
@model Tuple<Game, User>

@if (Model.Item2 != null)
{
    <button class="favoritesButton ButtonBig">
        <div class="hidden gameId">@Model.Item1.Id</div>
        <div class="hidden userId">@Model.Item2.ID</div>
        @if (HomeController.db.GetFavorites(Model.Item2.ID).Select(x => x.Id).ToList().Contains(Model.Item1.Id))
        {
            <p>Remove from Favorites</p>
        }
        else
        {
            <p>Add to Favorites</p>
        }
    </button>
}