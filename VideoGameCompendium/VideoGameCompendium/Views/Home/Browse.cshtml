@using VideoGameCompendium.Models
@model List<Game>


@section Title{
    Browse Games
}

@section AddToHead{
    <link href="@Url.Content("~/Styles/CollectionStyle.css")" rel="stylesheet" />
}

<div class="GameLayoutToggle">
    <button class="listBtn" onclick="ListDisplay()">List</button>
    <button class="gridBtn" onclick="GridDisplay()">Grid</button>
</div>

<form class="FilterForm" action="~/Home/Browse" method="post">
    <input type="text" name="platform" placeholder="Switch" />
    <select asp-items="@ViewBag.Genres" name="genre">
        <option value="">Select One</option>
    </select><br />
    <select asp-items="@ViewBag.ESRB" name="esrb">
        <option value="">Select One</option>
    </select>
    <input type="submit" name="submit" value="Filter!" />
</form>

<div class="gameDisplay">
    @if (Model != null)
    {
        @foreach (Game game in Model)
        {
            <div class="GameCard List" id="display">
                <partial name="_DisplayGamesBrowsePartial" model="game" />
            </div>
        }
    }
</div>


<script>
    var element = document.getElementById("display");
    function ListDisplay() {
        element.className = "GameCard List";
    }

    function GridDisplay() {
        element.className = "GameCard Grid";
    }
</script>
