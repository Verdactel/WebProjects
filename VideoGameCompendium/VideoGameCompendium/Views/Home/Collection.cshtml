@using VideoGameCompendium.Models;
@model List<Game>

@section Title{
    Video Game Collection
}

@section AddToHead{
    <link href="@Url.Content("~/Styles/CollectionStyle.css")" rel="stylesheet" />
}

<div class="buttonToggle">
    <button onclick="ListDisplay()" id="listBtn">List</button>
    <button onclick="GridDisplay()" id="gridBtn">Grid</button>
</div>

<div class="DisplayContainer">
    <div class="List" id="list">
        <p>Here's some information.</p>
    </div>
</div>

<script>
    function ListDisplay() {
        document.getElementById("list").className = "List";
    }

    function GridDisplay() {
        document.getElementById("list").className = "Grid";
    }
</script>

