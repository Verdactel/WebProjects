@using VideoGameCompendium.Models;
@model List<Game>

@section Title{
    Video Game Collection
}

@section AddToHead{
    <link href="@Url.Content("~/Styles/CollectionStyle.css")" rel="stylesheet" />
}

<div class="buttonToggle">
    <button class="listBtn" onclick="ListDisplay()">List</button>
    <button class="gridBtn" onclick="GridDisplay()">Grid</button>
</div>

<div class="DisplayContainer">
    <div class="List" id="display">
        @*<p>Here's some information.</p>*@
        <partial name="_DisplayCollectionPartial"/>

        @* Display Information based on class *@
        @*@foreach (Game game in Model)
        {
            <partial name="_DisplayCollectionPartial" model="@game" />
        }*@
    </div>
</div>

<script>
    var element = document.getElementById("display");
    function ListDisplay() {
        element.className = "List";
        //document.getElementById("test").hidden = false;
    }

    function GridDisplay() {
        element.className = "Grid";
        //document.getElementById("test").hidden = true;
    }
</script>
